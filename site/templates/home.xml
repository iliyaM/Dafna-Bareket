<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:collection  include="animation_chain,page_control"/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body>
			<cms:svg file="site-sprite.svg"/>
			<!-- Main Section of the page -->
			<section class="home">
				<!-- Container of the page -->
				<div class="main">
					<!-- Floating absolutly positioned div -->
					<div class="floating">
						<cms:module
							name="articles"
							action="show"
							text_id="upper"
							template="stock/article_generic.xml"
							>
							<param name="title" value=""/>
						</cms:module>

						<cms:desktop>
							<!-- Links with svgs -->
							<a href="https://www.instagram.com/dafna_bareket/" target="_blank" class="insta">
								<cms:svg file="site-sprite.svg" symbol="instagram" />
							</a>
							<a href="https://www.facebook.com/%D7%93%D7%A4%D7%A0%D7%94-%D7%91%D7%A8%D7%A7%D7%AA-%D7%A1%D7%93%D7%A8-%D7%A1%D7%98%D7%99%D7%99%D7%9C%D7%99%D7%A0%D7%92-%D7%95%D7%94%D7%9C%D7%91%D7%A9%D7%AA-%D7%94%D7%91%D7%99%D7%AA-927981350621786/?ref=bookmarks" target="_blank" class="facebook">
								<cms:svg file="site-sprite.svg" symbol="facebook" />
							</a>
						</cms:desktop>

					</div>
					<cms:mobile>
						<div class="connections">
							<!-- Links with svgs -->
							<a href="https://www.instagram.com/dafna_bareket/" target="_blank" class="insta">
								<cms:svg file="site-sprite.svg" symbol="instagram" />
							</a>
							<a href="https://www.facebook.com/%D7%93%D7%A4%D7%A0%D7%94-%D7%91%D7%A8%D7%A7%D7%AA-%D7%A1%D7%93%D7%A8-%D7%A1%D7%98%D7%99%D7%99%D7%9C%D7%99%D7%A0%D7%92-%D7%95%D7%94%D7%9C%D7%91%D7%A9%D7%AA-%D7%94%D7%91%D7%99%D7%AA-927981350621786/?ref=bookmarks" target="_blank" class="facebook">
								<cms:svg file="site-sprite.svg" symbol="facebook" />
							</a>
						</div>
					</cms:mobile>

					<!-- Top article -->
					<cms:module
						name="articles"
						action="show"
						text_id="top_article"
						template="stock/article_generic.xml"
						/>

					<!-- Middle list markdown section with article -->
					<div class="content">
						<cms:module
							name="articles"
							action="show"
							text_id="content"
							template="stock/article_generic.xml"
							/>
					</div>

					<!-- Bottom content with constants -->
					<div class="bottom_content">
						<h3><cms:text constant="know_more" /></h3>
						<cms:desktop>
							<h4><cms:text constant="watch_gallery" /></h4>
							<a href="#gallery">
								<cms:text constant="to_gallery" />
							</a>
						</cms:desktop>
					</div>

					<!-- Container to hold form and log inline -->
					<div class="container">

						<!-- Form container -->
						<div class="form">
							<h4><cms:text constant="contact_me" /></h4>
							<cms:module
								name="contact_form"
								action="show"
								text_id="contact_form"
								/>
						</div>
						<!-- Logo container -->
						<div class="logo">
							<img
								src="_BASEURL.'/site/images/logo.svg'"
								alt="site_logo"
								cms:eval="src"
								/>
						</div>
					</div>
				</div>
			</section>
			<!-- Section Gallery -->
			<section id="gallery">
				<cms:module
					name="gallery"
					action="show_image_list"
					group="projects"
					template="parts/gallery.xml"
					/>
			</section>

		</body>
	</html>
</document>
